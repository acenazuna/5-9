<div class="container">

	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>

			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>

			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>

			<div class="row">
				<% if current_user.id == @user.id %>
					<%= link_to edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" do %>
					<% end %>
				<% else %>
					<%= link_to user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" do %>
					<% end %>
				<% end %>
			</div>

			<h2>New book</h2>

			<%= form_for(@book) do |f| %>
				<div class="field row">
					<p><%= f.label :title %></p>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>

				<div class="field row">
					<p><%= f.label :opinion %></p>
					<%= f.text_area :body, class: "col-xs-12" %>
				</div>

				<div class="row">
					<p><%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %></p>
				</div>
			<% end %>


		</div>

		<div class="col-xs-9">
			<h2>Books</h2>

			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
						<tr>
							<th>
								<%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
							</th>
							<th>
								<%= link_to book.title, book_path(book.id) %>
							</th>
							<th><%= book.body %></th>
						</tr>
					<% end %>

				</tbody>
			</table>
		</div>
	</div>
</div>

